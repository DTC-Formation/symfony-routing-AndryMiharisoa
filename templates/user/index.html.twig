{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>User index</h1>
  <a href="{{ path('app_user_new') }}" style="margin-left:800px;" class="btn btn-success s-50">Ajouter</a>
    <table class="table" id="example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>CIN</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.Nom }}</td>
                <td>{{ user.Prenom }}</td>
                <td>{{ user.Age }}</td>
                <td>{{ user.CIN }}</td>
               <td>{{ user.Adresse }}</td>
                <td>
                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info"><i class="fa fa-eye" style="padding: 5px"></i></a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-success"><i class="fa fa-edit" style="padding: 5px"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  
{% endblock %}
{% block javascripts %}
       {{parent()}}
        <script>
            $(function() {
                
                $('#example').DataTable({
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json"
                    }
                  });


                });

    </script>
   {% endblock %}
